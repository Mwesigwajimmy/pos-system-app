{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      // Add these new path mappings for TypeScript
      "@langchain/community/chat_models/ollama": [
        "./src/lib/langchain/chat-ollama-shim.ts"
      ],
      "langchain/agents": [
        "./src/lib/langchain/langchain-agents-shim.ts"
      ],
      "@langchain/core/prompts": [
        "./src/lib/langchain/core-prompts-shim.ts"
      ],
      "@langchain/core/tools": [
        "./src/lib/langchain/core-tools-shim.ts"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "supabase"
  ]
}